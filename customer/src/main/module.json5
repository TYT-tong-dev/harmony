{
  "module": {
    "name": "customer",
    "type": "feature",
    "description": "$string:customer_module_desc",
    "mainElement": "CustomerAbility",
    "deviceTypes": [
      "phone",
      "tablet"
    ],
    "deliveryWithInstall": true,
    "installationFree": true,
    "pages": "$profile:main_pages",
    "abilities": [
      {
        "name": "CustomerAbility",
        "srcEntry": "./ets/customerability/CustomerAbility.ets",
        "description": "$string:CustomerAbility_desc",
        "icon": "$media:ic_shop",
        "label": "$string:CustomerAbility_label",
        "startWindowIcon": "$media:ic_shop",
        "startWindowBackground": "$color:start_window_background",
        "exported": true,
        "skills": [
          {
            "entities": [
              "entity.system.browsable"
            ],
            "actions": [
              "action.system.viewData"
            ],
            "uris": [
              {
                "scheme": "https",
                "host": "restaurant.customer.com",
                "pathStartWith": "/table"
              },
              {
                "scheme": "customer-app"
              }
            ]
          }
        ]
      }
    ],
    "requestPermissions": [
      {
        "name": "ohos.permission.INTERNET",
        "reason": "$string:internet_permission_reason",
        "usedScene": {
          "abilities": [
            "CustomerAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.NOTIFICATION_CONTROLLER",
        "reason": "$string:notification_permission_reason",
        "usedScene": {
          "abilities": [
            "CustomerAbility"
          ],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.VIBRATE",
        "reason": "$string:vibrate_permission_reason",
        "usedScene": {
          "abilities": [
            "CustomerAbility"
          ],
          "when": "inuse"
        }
      }
    ]
  }
}

